    "run:vite": "turbo run:vite",
    "storybook": "pnpm -F vite storybook"

  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
